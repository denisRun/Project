@model Dictionary<string, decimal>
@{
    ViewBag.Title = "MoneyPerMonth";
}

<h2 class="mt-3">Money per month</h2>

<div class="container mt-3">
    <div class="col-xs-9 col-xs-offset-1">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.Label("Month")
                    </th>
                    <th>
                        @Html.Label("Money")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var value in Model)
                {
                    <tr>
                        <td>
                            @Html.Raw(value.Key)
                        </td>
                        <td>
                            @Html.Raw(value.Value)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
