@model List<HotelWEB.Models.BookingModel>

@{ ViewBag.Title = "Index"; }

@Html.ActionLink("Money per month", "MoneyPerMonth" )
<h2>Index</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.LabelFor(model => model[0].BookingGuest.FullName)
            </th>
            <th>
                @Html.LabelFor(model => model[0].EnterDate)
            </th>
            <th>
                @Html.LabelFor(model => model[0].LeaveDate)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
<tr>
    <td>
        @Html.Raw(booking.BookingGuest.FullName)
    </td>
    <td>
        @Html.Raw(booking.EnterDate)
    </td>
    <td>
        @Html.Raw(booking.LeaveDate)
    </td>
    <td>
        @if (booking.Set == "Checked In")
        {
@Html.ActionLink("Check Out", "CheckOut", new
{
    id = booking.Id
}) }
                else if (booking.Set != "Checked Out")
                {
                    @Html.ActionLink("Check in", "CheckIn", new
                    {
                        id = booking.Id
                    })
                }
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new
        {
            id = booking.Id
        })
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new
        {
            id = booking.Id
        })
    </td>
    <td>
        @Html.ActionLink("Delete", "Delete", new
        {
            id = booking.Id
        })
    </td>
</tr>}
    </tbody>
</table>
@Html.ActionLink("Create", "Create", null, new[] { "btn" })