@model HotelWEB.Models.GuestModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @required = "required" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Surname)
            @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @required = "required" } })
        </div>
        <div class="form-group">
            <input type="submit" action="Create" class="btn" value="Edit" />
        </div>
    </div>
}
