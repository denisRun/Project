@model HotelWEB.Models.CategoryModel
@{
    ViewBag.Title = "Create";
}

<h2 style="margin-bottom:30px">Create</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-xs-2 col-xs-offset-1">
                @Html.LabelFor(model => model.Name)
            </div>
            <div class="col-xs-8">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control input-lg", @required = "required" } })
            </div>
        </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Price)
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.Price)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Bed)
                @Html.EditorFor(model => model.Bed, new { htmlAittribures = new { @class = "form-control", @required = "required" } })
            </div>
            <div class="form-group">
                <input type="submit" action="Create" class="btn" value="Create" />
            </div>
        </div>
}