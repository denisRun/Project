@model List<HotelWEB.Models.CategoryModel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.LabelFor(model => model[0].Name)
            </th>
            <th>
                @Html.LabelFor(model => model[0].Price)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
        <tr>
            <td>
                @Html.Raw(category.Name)
            </td>
            <td>
                @Html.Raw(category.Price)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new
                {
                    id = category.Id
                })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new
                {
                    id = category.Id
                })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new
                {
                    id = category.Id
                })
            </td>
        </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Create", "Create",null, new[] { "btn" })