@model List<HotelWEB.Models.CategoryModel>
@{ ViewBag.Title = "Index"; }

<div class="row" style="margin-top:30px">
    <div class="col-xs-3">
        <h2>All Categories</h2>
    </div>
    <div class="col-xs-1 col-xs-offset-8">
        <h1> @Html.ActionLink(" ", "Create", null, 
                 new { @class = "glyphicon glyphicon-plus", style = "color:SeaGreen" }) </h1>
</div>
</div>

<table class="table table-hover form-top-mg" style="margin-left:10px">
    <thead>
        <tr>
            <th>
                @Html.LabelFor(model => model[0].Name)
            </th>
            <th>
                @Html.LabelFor(model => model[0].Price)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
        <tr>
            <td>
                @Html.Raw(category.Name)
            </td>
            <td>
                @Html.Raw(category.Price + "&#36");
            </td>
            <td>
                <h4>
                    @Html.ActionLink(" ", "Details", new
                    {
                        id = category.Id
                    },
                    new { @class = "glyphicon glyphicon-zoom-in"})
                </h4>
            </td>
            <td>
                <h4>
                    @Html.ActionLink(" ", "Edit", new
                    {
                        id = category.Id
                    },
                    new { @class = "glyphicon glyphicon-cog" })
                </h4>
            </td>
            <td>
                <h4>
                    @Html.ActionLink(" ", "Delete", new
                    {
                        id = category.Id
                    },
                    new { @class = "glyphicon glyphicon-remove", style = "color:orangered;" })
                </h4>
            </td>
        </tr>
         }
    </tbody>
</table>
