@model HotelWEB.Models.CategoryModel
@{
    ViewBag.Title = "Details";
}

<h2>Category @Model.Id</h2>

<table class="table table-hover">
    <tr>
        <th>
            @Html.LabelFor(model => model.Name)
        </th>
        <td>
            @Model.Name
        </td>
    </tr>
    <tr>
        <th>
            @Html.LabelFor(model => model.Price)
        </th>
        <td>
            @Model.Price
        </td>
    </tr>
    <tr>
        <th>
            @Html.LabelFor(model => model.Bed)
        </th>
        <td>
            @Model.Bed
        </td>
    </tr>
</table>

