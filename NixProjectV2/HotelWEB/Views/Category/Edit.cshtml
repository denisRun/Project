@model HotelWEB.Models.CategoryModel

@{ ViewBag.Title = "Edit"; }

<h2 class="mt-4 mb-4">Edit Category @Model.Id</h2>

@using (Html.BeginForm())
{
<div class="form-horizontal  container">
    <div class="col-xs-10 col-xs-offset-1 table-bordered border">
        <div class="form-group mt-3">
            <div class="col-xs-2 col-xs-offset-1">
                <h4>@Html.LabelFor(model => model.Name)</h4>
            </div>
            <div class="col-xs-8">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control input-lg", @required = "required" } })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-2 col-xs-offset-1">
                <h4> @Html.LabelFor(model => model.Price)</h4>
            </div>
            <div class="col-xs-8">
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control input-lg", @required = "required" } })
                @Html.ValidationMessageFor(model => model.Price)
            </div>

        </div>
        <div class="form-group">
            <div class="col-xs-2 col-xs-offset-1">
                <h4> @Html.LabelFor(model => model.Bed)</h4>
            </div>
            <div class="col-xs-8">
                @Html.EditorFor(model => model.Bed, new { htmlAttributes = new { @class = "form-control input-lg", @required = "required" } })
                @Html.ValidationMessageFor(model => model.Bed)
            </div>
        </div>
        <div class="form-group ">
            <div class="col-xs-3 col-xs-offset-6">
                <input type="submit" action="Create" class="btn btn-primary mb-2" value="OK" />
            </div>
        </div>
    </div>
</div>}