@model List<HotelWEB.Models.RoomModel>

@{
    ViewBag.Title = "FreeRooms";
}

<h2 class="mt-3">FreeRooms</h2>
<div class="container mt-3">
    <div class="col-xs-9 col-xs-offset-1">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.LabelFor(model => model[0].Name)
                    </th>
                    <th>
                        @Html.LabelFor(model => model[0].RoomCategory.Name)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var room in Model)
                {
                    <tr>
                        <td>
                            @Html.Raw(room.Name)
                        </td>
                        <td>
                            @Html.Raw(room.RoomCategory.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new
                            {
                                id = room.Id
                            })
                        </td>
                    </tr>
}
            </tbody>
        </table>
        </div>
    </div>
