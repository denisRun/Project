@model HotelWEB.Models.RoomModel

@{
    ViewBag.Title = "Details";
}

<h2 class="mt-3">Room @Model.Id</h2>
<div class="container mt-3">
    <div class="col-xs-9 col-xs-offset-1">
        <table class="table table-hover">
            <tr>
                <th>
                    @Html.LabelFor(model => model.Name)
                </th>
                <td>
                    @Model.Name
                </td>
            </tr>
            <tr>
                <th>
                    @Html.LabelFor(model => model.RoomCategory.Name)
                </th>
                <td>
                    @Model.RoomCategory.Name
                </td>
            </tr>
            <tr>
                <th>
                    @Html.LabelFor(model => model.RoomCategory.Price)
                </th>
                <td>
                    @Model.RoomCategory.Price
                </td>
            </tr>
            <tr>
                <th>
                    @Html.LabelFor(model => model.RoomCategory.Bed)
                </th>
                <td>
                    @Model.RoomCategory.Bed
                </td>
            </tr>
        </table>
    </div>
</div>
